{
  "manifest_version": 3,
  "name": "百词斩助手",
  "version": "2.0.0",
  "description": "百词斩助手 - React重构版本",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.baicizhan.com/*",
    "http://localhost:*/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "百词斩助手"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}