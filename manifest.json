{
    "name": "百词斩助手",
    "description": "百词斩网页助手，支持取词翻译、收藏单词等操作（可同步至百词斩APP中）",
    "author": "zhangxunwei",
    "version": "1.3",
    "manifest_version": 3,
    "options_page": "src/options/html/index.html",
    "background": {
        "service_worker": "src/script/js/background.js"
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_icon": {
            "16": "icon.png",
            "32": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        },
        "default_popup": "src/popup/index.html"
    },
    "content_scripts": [
        {
            "css": [
                "src/assets/webui-popover-1.2.17/jquery.webui-popover.min.css",
                "src/assets/bootstrap-4.6.2/css/bootstrap.min.css",
                "src/script/css/icon-tips.css",
                "src/script/css/baicizhan-helper.css"
            ],
            "js": [
                "src/assets/jquery-3.6.0/jquery-3.6.0.min.js",
                "src/assets/bootstrap-4.6.2/js/bootstrap.bundle.min.js",                
                "src/assets/webui-popover-1.2.17/jquery.webui-popover.min.js",
                "src/script/js/icon-tips.js",
                "src/script/js/my-webui-popover.js",
                "src/script/js/content-script.js"
            ],
            "matches": ["<all_urls>"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icon.png",
                "svgs/star.svg",
                "svgs/star-fill.svg",
                "svgs/volume-up.svg",
                "src/assets/bootstrap-4.6.2/js/bootstrap.bundle.min.js.map"
            ],
            "matches": ["<all_urls>"]
        }
    ]
  }