{
    "name": "百词斩助手",
    "description": "百词斩网页助手，支持取词翻译、收藏单词等操作（可同步至百词斩APP中）",
    "author": "zhangxunwei",
    "version": "1.2",
    "manifest_version": 3,
    "options_page": "src/options/html/index.html",
    "background": {
        "service_worker": "src/script/background.js"
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_icon": {
            "16": "icon.png",
            "32": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "content_scripts": [
        {
            "css": [
                "src/assets/webui-popover-1.2.17/jquery.webui-popover.min.css",
                "src/script/css/*.css"
            ],
            "js": [
                "src/assets/jquery-3.6.0/jquery-3.6.0.min.js",
                "src/assets/webui-popover-1.2.17/jquery.webui-popover.min.js",
                "src/script/js/*.js"
            ],
            "matches": ["<all_urls>"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icon.png",
                "src/options/html/index.html"
            ],
            "matches": ["<all_urls>"]
        }
    ]
  }