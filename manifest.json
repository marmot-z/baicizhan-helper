{
    "name": "baicizhan-helper",
    "description": "Baicizhan browser extension",
    "author": "zhangxunwei",
    "version": "1.0",
    "manifest_version": 3,
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage"
    ],
    "action": {
        "default_icon": {
            "16": "./images/baicizhan-helper.png",
            "32": "./images/baicizhan-helper.png",
            "48": "./images/baicizhan-helper.png",
            "128": "./images/baicizhan-helper.png"
        }
    },
    "icons": {
        "16": "./images/baicizhan-helper.png",
        "32": "./images/baicizhan-helper.png",
        "48": "./images/baicizhan-helper.png",
        "128": "./images/baicizhan-helper.png"
    },
    "content_scripts": [
        {
            "css": [
                "libs/webui-popover/jquery.webui-popover.css", 
                "icon-tips.css",
                "content.css"                
            ],
            "js": [
                "libs/jquery-3.6.0/jquery-3.6.0.js", 
                "libs/webui-popover/jquery.webui-popover.js",                 
                "icon-tips.js",
                "content.js"
            ],
            "matches": ["<all_urls>"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [                
                "libs/**",
                "*.js",
                "options.html",
                "*.css",
                "images/baicizhan-helper.png"
            ],
            "matches": ["<all_urls>"]
        }
    ]
  }